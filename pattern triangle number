package day1programs;

public class trianglenum 
{
	public static void amin(String args[])
	{
		int n=5;
		for(int i=1;i<=n;i++)
		{
			for(int j=n-i;j>=1;j--)
			{
				System.out.print(" ");
			}
			for(int j=0;j<=i;j++)
			{
				System.out.print(""+j+ " ");
			}
			System.out.println();
		}
		
	}
	
}
