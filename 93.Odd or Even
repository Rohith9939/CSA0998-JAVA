import java.util.*;
class OddEven
{
    public static void main(String[] args)
    {
        System.out.print("Enter the number:");
        Scanner s= new Scanner(System.in);
        int n=s.nextInt();
        if(n%2==0)
        {
            System.out.println("The given number "+ n + " is even");
        }
        else
        {
            System.out.println("The given number "" + n + " is odd");
        }
    }
}

